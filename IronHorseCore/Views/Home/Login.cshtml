@{
    Layout = "_Layout_Login";
}

<div class="row">
    <div class="col-4 offset-4 mt-4">
        <form asp-action="Login" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><span class="fas fa-envelope"></span></span>
                    </div>
                    <input class="form-control" name="email" placeholder="Correo electrónico" type="text" aria-label="email adress" required>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-4">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><span class="fas fa-unlock-alt"></span></span>
                    </div>
                    <input class="form-control" name="password" placeholder="Contraseña" type="password" aria-label="Password" required>
                </div>
            </div>

            <button type="submit" class="btn btn-block btn-primary">Ingresar</button>

        </form>
    </div>
</div>
