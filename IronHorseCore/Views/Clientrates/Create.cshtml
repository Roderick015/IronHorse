            <label asp-for="CollectionUnit" class="control-label"></label>
            <input asp-for="CollectionUnit" class="form-control" />
            <span asp-validation-for="CollectionUnit" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PriceWithoutVat" class="control-label"></label>
            <input asp-for="PriceWithoutVat" class="form-control" />
            <span asp-validation-for="PriceWithoutVat" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="ContractNumber" class="control-label"></label>
                <input asp-for="ContractNumber" class="form-control" />
                <span asp-validation-for="ContractNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractExpiration" class="control-label"></label>
                <input asp-for="ContractExpiration" class="form-control" />
                <span asp-validation-for="ContractExpiration" class="text-danger"></span>
