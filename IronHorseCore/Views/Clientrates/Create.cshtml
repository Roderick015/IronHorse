@model IronHorseCore.Models.Clientrate

@{
    ViewData["Title"] = "Create";
}

<h4>Agregar Tarifa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TypeServiceId" class="control-label"></label>
                <select asp-for="TypeServiceId" class="form-control" asp-items="ViewBag.TypeServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TypeLoadId" class="control-label"></label>
                <select asp-for="TypeLoadId" class="form-control" asp-items="ViewBag.TypeLoadId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TypeProductId" class="control-label"></label>
                <select asp-for="TypeProductId" class="form-control" asp-items="ViewBag.TypeProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceId" class="control-label"></label>
                <select asp-for="SourceId" class="form-control" asp-items="ViewBag.SourceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DestinyId" class="control-label"></label>
                <select asp-for="DestinyId" class="form-control" asp-items="ViewBag.DestinyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UnitId" class="control-label"></label>
                <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MoneyId" class="control-label"></label>
                <select asp-for="MoneyId" class="form-control" asp-items="ViewBag.MoneyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PriceWithoutVat" class="control-label"></label>
                <input asp-for="PriceWithoutVat" class="form-control" />
                <span asp-validation-for="PriceWithoutVat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractNumber" class="control-label"></label>
                <input asp-for="ContractNumber" class="form-control" />
                <span asp-validation-for="ContractNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractExpiration" class="control-label"></label>
                <input asp-for="ContractExpiration" class="form-control" />
                <span asp-validation-for="ContractExpiration" class="text-danger"></span>
            </div>
            @*
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                    </label>
                </div>

                <div class="form-group">
                    <label asp-for="UniqueId" class="control-label"></label>
                    <input asp-for="UniqueId" class="form-control" />
                    <span asp-validation-for="UniqueId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MetaAuth" class="control-label"></label>
                    <input asp-for="MetaAuth" class="form-control" />
                    <span asp-validation-for="MetaAuth" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsRemoved" /> @Html.DisplayNameFor(model => model.IsRemoved)
                    </label>
                </div>
            *@
            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2-bootstrap4.css" rel="stylesheet" />
    <script src="~/lib/select2/js/select2.js"></script>
    <script src="~/lib/select2/js/i18n/es.js"></script>

    <script>
        $('#ClientId').select2({
            theme: 'bootstrap4',
        });

        $('#TypeServiceId').select2({
            theme: 'bootstrap4',
        });

        $('#TypeLoadId').select2({
            theme: 'bootstrap4',
        });

        $('#TypeProductId').select2({
            theme: 'bootstrap4',
        });

        $('#SourceId').select2({
            theme: 'bootstrap4',
        });

        $('#DestinyId').select2({
            theme: 'bootstrap4',
        });

        $('#UnitId').select2({
            theme: 'bootstrap4',
        });

        $('#MoneyId').select2({
            theme: 'bootstrap4',
        });
    </script>
}