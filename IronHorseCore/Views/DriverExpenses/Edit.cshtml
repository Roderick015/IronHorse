@model IronHorseCore.Models.Driverexpense

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Gasto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="display:none;">
                <label asp-for="DriverId" class="control-label"></label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeExpenseId" class="control-label"></label>
                <select asp-for="TypeExpenseId" class="form-control" asp-items="ViewBag.TypeExpenseId"></select>
                <span asp-validation-for="TypeExpenseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input id="strDate" name="strDate" class="form-control" value="@Convert.ToDateTime(Model.Date).ToString("dd/MM/yyyy")" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="OperacionDesignada" class="control-label"></label>
                <input asp-for="OperacionDesignada" class="form-control" />
                <span asp-validation-for="OperacionDesignada" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="AprobadoPor" class="control-label"></label>
                <input asp-for="AprobadoPor" class="form-control" />
                <span asp-validation-for="AprobadoPor" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="OperationId" class="control-label"></label>
                <select asp-for="OperationId" class="form-control" asp-items="ViewBag.OperationId"></select>
                <span asp-validation-for="OperationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.es.min.js"></script>

    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2-bootstrap4.css" rel="stylesheet" />
    <script src="~/lib/select2/js/select2.js"></script>
    <script src="~/lib/select2/js/i18n/es.js"></script>

    <script>


        //Agregarle el datepicker del javascript
        $('#strDate').datepicker({
            language: "es",
            autoclose: true,
            todayHighlight: true
        });


        /*
        $('#Description').select2({
            theme: 'bootstrap4',
        });
        */

    </script>

}
