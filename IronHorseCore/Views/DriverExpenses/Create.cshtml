@model IronHorseCore.Models.Driverexpense

@{
    ViewData["Title"] = "Create";
}

<h4>Agregar Gasto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none;">
                <label asp-for="DriverId" class="control-label"></label>
                <select asp-for="DriverId" class="form-control" asp-items="ViewBag.DriverId"></select>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="TypeExpenseId" class="control-label"></label>
                <select asp-for="TypeExpenseId" class="form-control" asp-items="ViewBag.TypeExpenseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="OperacionDesignada" class="control-label"></label>
                <input asp-for="OperacionDesignada" class="form-control" />
                <span asp-validation-for="OperacionDesignada" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="AprobadoPor" class="control-label"></label>
                <input asp-for="AprobadoPor" class="form-control" />
                <span asp-validation-for="AprobadoPor" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <label asp-for="OperationId" class="control-label"></label>
                <select asp-for="OperationId" class="form-control" asp-items="ViewBag.OperationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
